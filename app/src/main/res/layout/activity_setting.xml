<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.hjianfei.museum_beacon_exhibition.view.activity.setting.SettingActivity">

    <include layout="@layout/default_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/version_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableRight="@drawable/arror"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="版本更新"
                android:textColor="#333333"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableRight="@drawable/arror"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="清除缓存"
                android:textColor="#333333"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/help_and_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableRight="@drawable/arror"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="帮助与反馈"
                android:textColor="#333333"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/about_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableRight="@drawable/arror"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="关于我们"
                android:textColor="#333333"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bt_exit_shape"
        android:padding="4dp"
        android:text="退出登录"
        android:textColor="#333333"
        android:textSize="18sp" />
</LinearLayout>
